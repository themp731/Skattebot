modules = ["python-3.11", "nix"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "pkg-config", "qhull", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Automation Runner"

[[workflows.workflow]]
name = "Automation Runner"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m src.automation.runner --league-id $LEAGUE_ID --years $YEARS"

[deployment]
run = ["sh", "-c", "python -m src.automation.runner --league-id ${LEAGUE_ID:-12345} --years ${YEARS:-2024}"]

[agent]
expertMode = true
